@model CategoryDto
<div class="leading-loose m-2">
    <form action="update" method="post" class="p-10 bg-white rounded shadow-xl w-[50%] m-auto mt-1" >
        <p class="text-lg text-gray-800 bg-gray-100 font-medium pb-4 text-center  border-6 fs-4 pt-3  rounded-[15px] ">Edit Category</p> 
        <div class="">
            <input type="number" hidden="hidden" asp-for="Id"/>
            <label class=" text-sm text-gray-600" for="cus_name">Category Name</label><br/>
            <input asp-for="CategoryName" class="w-[50%] px-5  text-gray-700 bg-gray-200 rounded" id="cus_name"
                   type="text" required="" placeholder="Category Name" aria-label="category Name">
        </div>
        <div class="mt-6">
            <button class="px-4 py-1 text-white font-light tracking-wider  bg-gray-900 rounded"  type="submit">Edit</button>
        </div>
    </form>
</div>