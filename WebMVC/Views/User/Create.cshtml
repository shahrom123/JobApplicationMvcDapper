@model UserDto
<div class="leading-loose m-2">
    <form action="create" method="post" class="p-10 bg-white rounded shadow-xl w-[50%] m-auto mt-1" >
        <p class="text-lg text-gray-800 bg-gray-100 font-medium pb-4 text-center  border-6 fs-4 pt-3  rounded-[15px] ">Register User</p> 
        <div class="">
            <label class=" text-sm text-gray-600" for="cus_name"  >First Name</label><br/>
            <input asp-for="FirstName" class="w-[50%] px-5  text-gray-700 bg-gray-200 rounded" id="cus_name"  type="text" required="" placeholder="First Name" aria-label="First Name">
        </div> 
        <div class=""> 
            <label  class="block text-sm text-gray-600" for="cus_name">Last Name</label><br/>
            <input asp-for="LastName" class="w-[50%] px-5  text-gray-700 bg-gray-200 rounded" id="cus_name" type="text" required="" placeholder="Last Name" aria-label="First Name">
        </div>
        <div class=""> 
            <label class="block text-sm text-gray-600" for="cus_name">Email</label><br/>
            <input asp-for="Email" class="w-[50%] px-5 text-gray-700 bg-gray-200 rounded" id="cus_name"  type="email" required="" placeholder="Your email" aria-label="Email">
        </div>
        <div class="mt-2">
            <label class=" block text-sm text-gray-600" for="cus_email">Phone Number</label><br/>
            <input asp-for="PhoneNumber" class="w-[50%] px-2  text-gray-700 bg-gray-200 rounded" id="cus_email"  type="number" required="" placeholder="Phone Number" aria-label="Phone Number">
        </div>
        <div class="mt-2">
            <label class=" block text-sm text-gray-600" for="cus_email">Address</label><br/>
            <input asp-for="Address" class="w-[50%] px-2  text-gray-700 bg-gray-200 rounded" id="cus_email"  type="text" required="" placeholder=" Your Address" aria-label="Address">
        </div>
        <div class="mt-2">
            <label class="text-sm block text-gray-600" for="cus_email">Job ID</label><br/>
            <input asp-for="JobId"  class="w-[50%] px-2  text-gray-700 bg-gray-200 rounded" id="cus_email"  type="number" required="" placeholder="Job ID" aria-label="JobId">
        </div>
        <div class="mt-6">
            <button class="px-4 py-1 text-white font-light tracking-wider  bg-gray-900 rounded"  type="submit">Save</button>
        </div>
    </form>
</div>